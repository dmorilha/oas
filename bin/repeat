#!/bin/bash
case `basename $0` in
"chapter-next")
  method="oas.method.void.chapterNext"
  ;;
"chapter-previous")
  method="oas.method.void.chapterPrevious"
  ;;
"clear"|"clear-playlist")
  method="oas.method.void.clear"
  ;;
"forward30")
  method="oas.method.void.forward30"
  ;;
"forward600")
  method="oas.method.void.forward600"
  ;;
"next")
  method="oas.method.void.next"
  ;;
"next-subtitle-stream")
  method="oas.method.void.nextSubtitleStream"
  ;;
"resume"|"unpause")
  method="oas.method.void.resume"
  ;;
"pause")
  method="oas.method.void.pause"
  ;;
"repeat")
  method="oas.method.void.repeat"
  ;;
"rewind30")
  method="oas.method.void.rewind30"
  ;;
"rewind600")
  method="oas.method.void.rewind600"
  ;;
"lights-off")
  method="oas.method.void.lightsOff"
  ;;
"lights-on")
  method="oas.method.void.lightsOn"
  ;;
"show-info")
  method="oas.method.void.showInfo"
  ;;
"speed-increase")
  method="oas.method.void.speedIncrease"
  ;;
"speed-decrease")
  method="oas.method.void.speedDecrease"
  ;;
"tv-off")
 method="oas.method.void.tvOff"
  ;;
"tv-on")
  method="oas.method.void.tvOn"
  ;;
"volume-down")
  method="oas.method.void.volumeDown"
  ;;
"volume-up")
  method="oas.method.void.volumeUp"
  ;;
"stop")
  method="oas.method.void.stop"
  ;;
"set-audio-device")
  method="oas.method.void.setAudioDevice"
  ;;
esac

arguments='';

for i in $@; do
  arguments="$arguments string:$i";
done;

echo send $method $arguments;
dbus-send --system --dest=oas.methods.server --type=method_call / "$method" $arguments;
